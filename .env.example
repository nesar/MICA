# MICA Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================

# Default LLM provider: "argo" or "gemini"
MICA_LLM_PROVIDER=argo

# Default model ID (provider-specific)
# Argo options: claudesonnet45, claudeopus45, claudesonnet4, gpt4o, gemini25flash, etc.
# Gemini options: gemini-flash, gemini-thinking, gemini-flash25
MICA_DEFAULT_MODEL=claudesonnet45

# Argo API Configuration (required if using Argo)
ARGO_USERNAME=your_argo_username

# Google API Configuration (required if using Gemini)
GOOGLE_API_KEY=your_google_api_key

# =============================================================================
# Server Configuration
# =============================================================================

# API Server
MICA_HOST=0.0.0.0
MICA_PORT=8000

# Session storage directory (absolute path or relative to backend/)
MICA_SESSION_DIR=./sessions

# =============================================================================
# Web Search Configuration
# =============================================================================

# Search API (options: tavily, serpapi, duckduckgo)
MICA_SEARCH_PROVIDER=duckduckgo

# Tavily API Key (if using Tavily)
TAVILY_API_KEY=your_tavily_api_key

# SerpAPI Key (if using SerpAPI)
SERPAPI_API_KEY=your_serpapi_key

# =============================================================================
# RAG Configuration
# =============================================================================

# ChromaDB persistence directory
MICA_CHROMA_DIR=./chroma_db

# Embedding model for RAG
MICA_EMBEDDING_MODEL=all-MiniLM-L6-v2

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
MICA_LOG_LEVEL=INFO

# Enable detailed agent logging
MICA_AGENT_LOGGING=true

# =============================================================================
# Open WebUI Configuration
# =============================================================================

# Backend URL (for Open WebUI pipe to connect)
MICA_BACKEND_URL=http://localhost:8000

# =============================================================================
# Security (for production)
# =============================================================================

# API Key for authenticating requests (optional, leave empty for dev)
MICA_API_KEY=

# CORS origins (comma-separated)
MICA_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
